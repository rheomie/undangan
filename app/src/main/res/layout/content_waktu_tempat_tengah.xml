<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="#8D3F25" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/gambartengahgaris" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="#8D3F25" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Minggu"
        android:textAlignment="center"
        android:textColor="#8D3F25"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18 Desember 2018"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="#8D3F25"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="#8D3F25" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/gambartengahgaris" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="#8D3F25" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8D3F25"
                android:textSize="18sp"
                android:text="Akad Nikah"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#8D3F25"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="08.00 WIB s/d Selesai"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#8D3F25"
                android:layout_height="wrap_content"
                android:text="Resepsi"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#8D3F25"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="10.00 WIB s/d Selesai"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#8D3F25"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="Alamat\nGedung Balai Krakatau\nJl. Imam Bonjol No. 1000 ABC\nBandar Lampung"/>
</LinearLayout>